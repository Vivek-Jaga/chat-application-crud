<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>all chats</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All chats</h3>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats) { %>
        <div class="chat">

            <p>From : <i><%= chat.from %></p>
            
            <div class="msg">
                
                <p><%= chat.msg %></p>
                <form action="/chats/<%= chat._id %>/edit" method="get">
                    <button>Edit</button>
                </form>

                <form method="post" action="/chats/<%= chat._id %>?_method=DELETE" onsubmit="return confirmDelete('<%= chat.from %>')">
                    <button type="submit">Delete</button>
                </form>

            </div>

            <p>Recieved by<i> <%= chat.to %></p>
            <hr>

            <p><%= chat.created_at.toString().split(" ")[4]%></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
        </div>
        <br><br>
        <% } %>
        <script>
            function confirmDelete(chatFrom) {
    return confirm(`Are you sure you want to delete chat from ${chatFrom}?`);
}
        </script>
</body>
</html>